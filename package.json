{
	"name": "edges-svelte",
	"version": "2.0.3",
	"license": "MIT",
	"author": "Pixel1917",
	"description": "A blazing-fast, extremely lightweight and SSR-friendly store for Svelte",
	"homepage": "https://github.com/Pixel1917/edge-s",
	"bugs": {
		"url": "https://github.com/Pixel1917/edge-s/issues",
		"email": "sank195951@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Pixel1917/edge-s.git"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "husky && svelte-kit sync",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"precommit": "pnpm lint && pnpm check",
		"semantic-release": "env-cmd semantic-release",
		"commit": "pnpm format && git add . && git-cz && git push",
		"release": "pnpm commit && pnpm semantic-release"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./server": {
			"types": "./dist/server/index.d.ts",
			"svelte": "./dist/server/index.js"
		},
		"./context": {
			"types": "./dist/context/index.d.ts",
			"svelte": "./dist/context/index.js"
		},
		"./state": {
			"types": "./dist/store/index.d.ts",
			"svelte": "./dist/store/index.js"
		},
		"./plugin": {
			"types": "./dist/plugin/index.d.ts",
			"default": "./dist/plugin/index.js"
		},
		"./dev": {
			"types": "./dist/utils/dev.d.ts",
			"default": "./dist/utils/dev.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0",
		"@sveltejs/kit": "^2.16.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"@types/node": "^22.15.23",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"publint": "^0.3.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.6",
		"vitest": "^3.0.0",
		"semantic-release": "^24.2.3",
		"husky": "^9.1.7",
		"git-cz": "^4.9.0",
		"commitizen": "^4.3.1",
		"env-cmd": "^10.1.0",
		"@semantic-release/git": "^10.0.1",
		"@commitlint/cli": "^19.7.1"
	},
	"config": {
		"commitizen": {
			"path": "git-cz"
		}
	},
	"keywords": [
		"sveltekit",
		"svelte",
		"store",
		"state",
		"edge-s",
		"ssr state",
		"state management",
		"ssr store"
	],
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"packageManager": "pnpm@9.13.2+sha512.88c9c3864450350e65a33587ab801acf946d7c814ed1134da4a924f6df5a2120fd36b46aab68f7cd1d413149112d53c7db3a4136624cfd00ff1846a0c6cef48a",
	"dependencies": {
		"devalue": "^5.1.1"
	}
}
